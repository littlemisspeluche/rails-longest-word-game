
<div class="container">
  <% @letters.each do |letter| %>
  <div class="letters">
    <ul>
      <li>
        <%= letter %>
      </li>
    </ul>
  </div>

  <% end %>
    <p>what is the longest word you can find?</p>
    <form class="form" action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input id="text" type="text" name="guess" placeholder="">

      <input type="submit">
    </form>




</div>
